@using Microsoft.AspNetCore.Identity
@using dotnet_g033.Models.Domain

@inject SignInManager<Gebruiker> SignInManager
@inject UserManager<Gebruiker> UserManager
@inject IGebruikerRepository GebruiksRepository

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User)) {
        <li class="nav-item">
            <a class="nav-link  text-dark text-black font-weight-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @GebruiksRepository.GetByUsername(User.Identity.Name).Voornaam @GebruiksRepository.GetByUsername(User.Identity.Name).Achternaam </a>
</li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark text-black font-weight-bold">Logout</button>
            </form>
        </li>
    }
    else {
        <li class="nav-item">
            <a class="nav-link  text-dark text-black font-weight-bold" asp-area="Identity" asp-page="/Account/Login">Afmelden</a>
        </li>
    }
</ul>
